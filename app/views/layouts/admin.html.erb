<!DOCTYPE html>
<html>
  <head>
    <title>AdminConsole | Aiteru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/3b4d9a27e8.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container">
          <%= link_to admin_root_path, class: "navbar-brand p-3 text-light" do %>
            <i class="fa-regular fa-calendar-check"></i> Aiteru Admin Console
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li>
                <%= link_to admin_root_path, class: "nav-link text-light" do %>
                  <i class="fa-regular fa-circle-user"></i> Users
                <% end %>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>
                <i class="fa-solid fa-right-from-bracket"></i> Log Out
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>
    <% if flash[:notice] %>
      <div class="alert alert-success mt-3 shadow" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger mt-3 shadow" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
