            <span>Aiteru<i class="fa-regular fa-calendar-check"></i><span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to "検索", root_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "プラン一覧", root_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "投稿一覧", root_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "いいね一覧", root_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", root_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "Aiteruについて", about_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <link_to "新規登録", root_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", root_path, class: "nav-link text-light" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
