<div class="container mt-4">
  <div class="text-center mb-5">
    <h1>User Management</h1>
    <p class="text-muted">You can manage all registered users from here</p>
  </div>

  <div class="row g-4 justify-content-center">
    <% @users.each do |user| %>
      <div class="col-12 col-md-6 mb-4">
        <div class="card border-0 shadow rounded-4 overflow-hidden h-100">
          <%= link_to admin_user_path(user.id), class: "text-decoration-none text-dark" do %>
            <%= image_tag user.get_profile_image(500, 500), class: "card-img-top object-fit-cover", alt: "プロフィール画像" %>
            <div class="card-body">
              <h5 class="card-title"><%= user.name %></h5>
              <p class="card-text text-muted"><%= user.email %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>