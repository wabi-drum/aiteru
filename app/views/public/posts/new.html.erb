<div class="container mt-5">
  <div class="col-md-8 mx-auto">
    <div class="card shadow rounded-4 p-4">
      <h3 class="mb-4 text-center">ðŸ“· Create a Post</h3>

      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="alert-heading">Oops! Looks like something went wrong.</h5>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Title", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "What's your post about?" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "Content", class: "form-label" %>
          <%= f.text_area :body, class: "form-control", placeholder: "Enter the main content here.", rows: 5 %>
        </div>

        <div class="mb-4">
          <%= f.label :image, "Select Image", class: "form-label" %>
          <%= f.file_field :image, accept: "image/*", class: "form-control" %>
        </div>

        <%= f.submit "Post", class: "btn btn-primary w-100 py-2" %>
      <% end %>
    </div>
  </div>
</div>
