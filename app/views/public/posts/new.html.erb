<div class="container">
  <div class="col-md-8">
    <h3>投稿フォーム</h3>
    <% if @post.errors.any? %>
      <h4>Error</h4>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @post do |f| %>
      <%= f.text_field :title, placeholder: "タイトル" %>
      <br>
      <%= f.text_area :body, placeholder: "本文" %>
      <br>
      <%= f.file_field :image, accept: "image/*" %>
      <br>
      <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>