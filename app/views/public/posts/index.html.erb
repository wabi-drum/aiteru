<div class="container mt-4">
  <div class="row g-4 justify-content-center">
    <% @posts.each do |post| %>
      <div class="col-12 col-md-6 mb-4">
        <div class="card border-0 shadow rounded-4 overflow-hidden h-100">
          <%= link_to post_path(post.id), class: "text-decoration-none text-dark" do %>
            <%= image_tag post.get_image(500, 500), class: "card-img-top object-fit-cover", alt: "投稿画像" %>
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text text-muted"><%= truncate(post.body, length: 100) %></p>
              <p><i class="fa-regular fa-comment"></i>  <%= post.post_comments.count %></p>
              <p class="card-text text-end mb-0 d-flex justify-content-end align-items-center gap-2">
                <%= image_tag post.user.get_profile_image(30, 30), class: "rounded-circle", style: "object-fit: cover;" %>
                <span class="text-primary"><%= post.user.name %></span>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>