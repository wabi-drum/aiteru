<div>
  <p>~Profile Image~</p>
  <%= image_tag @user.get_profile_image(300, 300) %>
  <p>~Name~</p>
  <h4><%= @user.name %></h4>
  <%= link_to "Edit Profile", edit_user_path(@user.id) %>
  <%= link_to "Delete Account", user_path(@user.id), method: :delete, "data-confirm" => "Are you sure you want to delete this account?" %>
</div>
<% @user.posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image(300, 300) %>
      <h5><%= post.title %></h5>
      <p><%= post.body %></p>
      <% end %>
    <% end %>
  </div>