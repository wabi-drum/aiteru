<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow rounded-4 p-4 text-center">
        <div class="mb-3">
          <%= image_tag @user.get_profile_image(150, 150), class: "rounded-circle img-fluid", alt: "Profile Image", style: "object-fit: cover;" %>
        </div>
        <h3 class="mb-1"><%= @user.name %></h3>
        <div class="d-flex justify-content-center gap-3 mt-3">
          <%= link_to "Edit Profile", edit_user_path(@user.id), class: "btn btn-outline-primary" %>
          <%= link_to "Delete Account", user_path(@user.id), method: :delete, data: { confirm: "Are you sure you want to delete this account?" }, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-5 g-4 justify-content-center">
    <% @user.posts.each do |post| %>
      <div class="col-12 col-md-6 mb-4">
        <div class="card border-0 shadow rounded-4 overflow-hidden h-100">
          <%= link_to post_path(post.id), class: "text-decoration-none text-dark" do %>
            <%= image_tag post.get_image(400, 400), class: "card-img-top object-fit-cover", alt: "Post Image" %>
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text text-muted"><%= truncate(post.body, length: 100) %></p>
              <p class="card-text text-end text-primary mb-0">by <%= @user.name %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
